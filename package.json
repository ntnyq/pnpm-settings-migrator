{
  "name": "pnpm-settings-migrator",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.6.0",
  "description": "Move pnpm settings from `pnpm` field in `package.json` and `.npmrc` file to `pnpm-workspace.yaml`",
  "keywords": [
    "migrator",
    "pnpm",
    "settings"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/pnpm-settings-migrator#readme",
  "repository": "ntnyq/pnpm-settings-migrator",
  "bugs": {
    "url": "https://github.com/ntnyq/pnpm-settings-migrator/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": "./bin.mjs",
  "files": [
    "bin.mjs",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --watch",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version release:publish",
    "release:check": "run-s lint typecheck test",
    "release:publish": "pnpm publish",
    "release:version": "bumpp",
    "start": "tsx src/cli.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ntnyq/utils": "^0.6.1",
    "@pnpm/types": "^1000.2.1",
    "cac": "^6.7.14",
    "camelcase-keys": "^9.1.3",
    "consola": "^3.4.0",
    "js-yaml": "^4.1.0",
    "pathe": "^2.0.3",
    "read-ini-file": "^4.0.0"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^4.0.0-beta.11",
    "@ntnyq/prettier-config": "^2.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.9",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "unbuild": "^3.5.0",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,vue,yml,yaml,toml,json}": "eslint --fix",
    "*.{css,scss,html}": "prettier -uw"
  }
}
