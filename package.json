{
  "name": "pnpm-settings-migrator",
  "type": "module",
  "version": "0.0.9",
  "packageManager": "pnpm@10.18.1",
  "description": "Move pnpm settings from `pnpm` field in `package.json` and `.npmrc` file to `pnpm-workspace.yaml`",
  "keywords": [
    "migrator",
    "pnpm",
    "settings"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/pnpm-settings-migrator#readme",
  "repository": "ntnyq/pnpm-settings-migrator",
  "bugs": {
    "url": "https://github.com/ntnyq/pnpm-settings-migrator/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./bin.mjs",
  "files": [
    "bin.mjs",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version",
    "release:check": "run-s lint typecheck test",
    "release:version": "bumpp",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ntnyq/utils": "^0.9.2",
    "@pnpm/types": "^1000.8.0",
    "cac": "^6.7.14",
    "camelcase-keys": "^10.0.0",
    "consola": "^3.4.2",
    "defu": "^6.1.4",
    "detect-indent": "^7.0.2",
    "pathe": "^2.0.3",
    "read-ini-file": "^4.0.0",
    "uncase": "^0.2.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.6.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@types/node": "^24.7.0",
    "bumpp": "^10.3.1",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,toml,json}": "eslint --fix"
  }
}
